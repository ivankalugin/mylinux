#/bin/sh

#sysctl -w net.ipv6.conf.all.disable_ipv6=1
#systemctl disable rsyslog.service

apt update
apt upgrade

/sbin/locale-gen ru_RU.UTF-8
/sbin/locale-gen ru_RU.CP1251
/sbin/dpkg-reconfigure console-setup
/sbin/dpkg-reconfigure locales
/sbin/dpkg-reconfigure keyboard-configuraton
/sbin/dpkg-reconfigure tzdata

apt install gnupg2
wget --quiet -O - https://www.postgresql.org/media/keys/ACCC4CF8.asc | apt-key add -

sh -c 'echo "deb http://apt.postgresql.org/pub/repos/apt $(lsb_release -cs)-pgdg main" > /etc/apt/sources.list.d/pgdg.list'

apt update
apt upgrade
apt install postgresql-client-15 postgresql-15 libpq-dev
apt install openssh-server sshfs openvpn easy-rsa net-tools
apt install git build-essential gcc pkg-config cmake libgmp3-dev libssl-dev libffi-dev
apt install default-jdk
apt install python3 python3-dev python3-six python3-pip virtualenv python3-venv
apt install apache2 libapache2-mod-php php-pgsql libapache2-mod-wsgi-py3
apt install samba cifs-utils
apt install vsftpd
apt install tftpd-hpa
apt install nfs-kernel-server
apt install tgt open-iscsi
apt install cups
apt install mc p7zip-full pbzip2 archivemount exfat-fuse exfat-utils cryptmount cryptsetup smartmontools

apt autoremove
apt clean
